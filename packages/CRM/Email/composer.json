{
    "name": "crm/email",
    "description": "Email integration and template management package for Laravel CRM",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "CRM Team",
            "email": "team@crm.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.0",
        "crm/core": "*",
        "crm/user": "*",
        "crm/contact": "*",
        "webklex/laravel-imap": "^5.3",
        "league/html-to-markdown": "^5.1",
        "twig/twig": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "CRM\\Email\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CRM\\Email\\Providers\\EmailServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
