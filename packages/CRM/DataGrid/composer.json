{
    "name": "crm/datagrid",
    "description": "Advanced data grid system for Laravel CRM",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "CRM Team",
            "email": "team@crm.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.0",
        "crm/core": "*",
        "crm/user": "*"
    },
    "autoload": {
        "psr-4": {
            "CRM\\DataGrid\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CRM\\DataGrid\\Providers\\DataGridServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
